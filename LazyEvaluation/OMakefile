.PHONY: all clean check

USE_OCAMLFIND = true

OCAMLPACKS[] =
   oUnit

FILES[] =
   small_stream_test
   small_stream

PROGRAM = small_stream_test

.DEFAULT: all
all: $(OCamlProgram $(PROGRAM), $(FILES))

clean:
	rm -f *~ *.opt *.cmi *.cmx *.o *.omc *.cma *.cmxa
	rm -f small_stream_test

check: all
	./$(PROGRAM)
